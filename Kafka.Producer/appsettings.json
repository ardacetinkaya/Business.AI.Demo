{
  "Kafka": {
    "Producer": {
      "BootstrapServers": "127.0.0.1:9093",
      "Acks": "All",
      "Retries": 3,
      "MaxInFlight": 1,
      "EnableIdempotence": true,
      "CompressionType": "Snappy",
      "LingerMs": 5,
      "BatchSize": 16384
    },
    "Topics": {
      "OrderEvents": "order-events"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Kafka.Producer.Services.OrderEventGeneratorService": "Information"
    }
  }
}